<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/llDeliveryDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/blue_rounded_shape"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:src="@drawable/dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Sudeshna Das"
                        android:layout_weight="0.4"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_10ssp" />



                    <TextView
                        android:id="@+id/tvTaken"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Order Taken"
                        android:visibility="gone"
                        android:layout_weight="0.6"
                        android:textAlignment="textEnd"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_10ssp" />


                </LinearLayout>



                <TextView
                    android:id="@+id/tvDatetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Date : 20-04-2023 | Time : 12:30 PM"
                    android:textAlignment="center"
                    android:textColor="@color/teal_700"
                    android:textSize="@dimen/_10ssp" />


                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Lorem ipsum dolor, 123456"
                    android:textAlignment="center"
                    android:drawableTint="@color/blue"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp" />




            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:tint="@color/grey_light"
                android:src="@drawable/ic_arrow_forward"
                android:layout_marginRight="@dimen/_15sdp"/>





        </LinearLayout>



    </androidx.cardview.widget.CardView>


</RelativeLayout>